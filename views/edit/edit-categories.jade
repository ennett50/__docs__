extends ../layout
block vars
	-var editTpl = true
block content
	div#add-category
		h1 Изменить категорию "#{title}"
		form.form.form-add-article.well(method="POST" )
			div.row
				div.form-group.col-md-6.col-xs-6
					label.control-label(for='title-category') Название категории
					input#title-category.form-control(type='text',name="titleCategory" required="" value=title)

				div.form-group.col-md-6.col-xs-6
					label.control-label(for='img-category') Картинка категории
					p Текущая картинка - <b>#{img}</b>
					input#img-category(type='file' name="imgCategory" value=img)

			div.row
				div.form-group.col-md-12.col-xs-12
					label.control-label(for='description-category') Описание категории
					textarea#description-category.form-control(name="descriptionCategory" required="")!= description

			div.row
				div.form-group.clearfix.col-md-12.col-xs-12
					input(type='hidden',value='PUT',name='_method')
					button.btn.btn-success(type='submit') Изменить категорию
